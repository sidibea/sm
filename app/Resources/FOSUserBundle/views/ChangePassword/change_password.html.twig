{% extends "@FOSUser/layout.html.twig" %}

{% block breadcrumb %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2" style="color: #fff !important;">
                <div class="col-sm-6">
                    <h1 class="m-0 text-green">Changer votre mot de passe</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
{% endblock %}

{% block content %}
<div class="row">
        
        <div class="col-12">
            <!-- Custom Tabs -->
            <div class="card">
             {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            <div class="card-body">
            <div class="row">
            <div class="col-12">
                    <div class="form-group">
                        <label for="">Mot de passe actuel</label>
                        {{ form_widget(form.current_password, {'attr': {'class': '' }}) }}
                    </div>
                    <div class="form-group">
                        <label for="">Nouveau mot de passe</label>
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': '' }}) }}
                    </div>
                    <div class="form-group">
                        <label for="">Confirmez le nouveau mot de passe</label>
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': '' }}) }}
                    </div>
                </div>
            </div>

             </div>

   
    <div class="card-footer">
        <input class="btn btn-primary" type="submit" value="Enregistrer" />
    </div>
{{ form_end(form) }}

            </div>

            </div>
        </div>
</div>
{% endblock  %}
