{% extends "ISMainBundle::layout.html.twig" %}
{% block pagestyle %}

{% endblock %}

{% macro productForm(form) %}
    <div class="col-md-4">
        <div class="position-s p-3 bg-gray" style="height: 180px">
            <div class="ribbon-wrapper">
                <div class="ribbon bg-primary">
                    Ribbon
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="">Taille</label>
                        {{ form_widget(form.taille, {'attr': {'class': '' }}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="">Prix</label>
                        {{ form_widget(form.prix, {'attr': {'class': '' }}) }}
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endmacro productForm %}


{% import _self as formMacros %}

{% block breadcrumb %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2" style="color: #fff !important;">
                <div class="col-sm-6">
                    <h1 class="m-0 text-green"> Ajouter un nouveau produit</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
{% endblock %}

{% block content %}
    <div class="row">

        <div class="col-12">
            <!-- Custom Tabs -->
            {{ form_start(form, {'attr': { 'class' : 'form' }}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}
            <div class="card">
                <div class="card-header d-flex p-0">
                    <h3 class="card-title p-3">Tabs</h3>
                    <ul class="nav nav-pills ml-auto p-2">
                        <li class="nav-item"><a class="nav-link active" href="#tab_1" data-toggle="tab">Informations Generales</a></li>
                        <li class="nav-item"><a class="nav-link" href="#tab_2" data-toggle="tab">Variations</a></li>

                    </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="form-group">
                                <label for="">Nom du produit</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="">Categorie</label>
                                {{ form_widget(form.category, {'attr': {'class': 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Image</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        {{ form_widget(form.imageFile, {'attr': {'class': 'file' }}) }}

                                    </div>
                                </div>
                            </div>
                            <div class="form-check">
                                {{ form_widget(form.enabled, {'attr': {'class': 'form-check-input' }}) }}
                                <label for="">Active ?</label>

                            </div>

                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_2" data-prototype="{{ formMacros.productForm(form.variations.vars.prototype)|e('html_attr') }}">
                           <div class="row">
                               {% for row in form.variations %}
                                   <div class="col-md-6">
                                       <div class="position-s p-3 bg-gray" style="height: 180px">
                                           <div class="ribbon-wrapper">
                                               <div class="ribbon bg-primary">
                                                   {{ row.vars.value.taille.nom }}
                                               </div>
                                           </div>
                                           <div class="row" >
                                               <div class="col-6">
                                                   <div class="form-group">
                                                       <label for="">Taille</label>
                                                       {{ form_widget(row.taille, {'attr': {'class': '' }}) }}
                                                   </div>
                                               </div>
                                               <div class="col-6">
                                                   <div class="form-group">
                                                       <label for="">Prix</label>
                                                       {{ form_widget(row.prix, {'attr': {'class': '' }}) }}
                                                   </div>
                                               </div>
                                               {{ form_row(row) }}
                                           </div>

                                       </div>
                                   </div>
                               {% endfor %}
                           </div>
                        </div>

                    </div>
                    <!-- /.tab-content -->
                </div><!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>

                </div>
            </div>


            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(form) }}
        </div>


    </div>



{% endblock %}

{% block scripts %}

{% endblock %}

{% block pagescripts %}
    <script src="{{ asset('dist/js/app.js') }}"></script>

{% endblock %}